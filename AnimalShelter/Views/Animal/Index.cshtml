@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animal</h1>

@if (@Model.Count == 0)
{
  <h3>No Animals are in the shelter!</h3>
} 

@foreach (Animal animal in Model)
{
  <li> @Html.ActionLink($"{animal.Name}", "Name", @Html.ActionLink($"{animal.Gender}"), "Gender",@Html.ActionLink($"{animal.Breed}"), "Breed", @Html.ActionLink($"{animal.Date}"), "Date Of Arrival",  new { id = animal.AnimalId })</li>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>